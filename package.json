{
  "name": "internet-account",
  "productName": "Internet Account",
  "description": "Kiosk automatic generate internet account",
  "version": "1.0.5",
  "private": true,
  "author": "Sathit Seethaphon",
  "copyright": "© 2019, Khon Kaen Hospital.",
  "homepage": "http://example.com",
  "main": "app/background.js",
  "build": {
    "appId": "com.app.internet-account",
    "productName": "Internet Account",
    "copyright": "Copyright © Khon Kaen Hospital",
    "generateUpdatesFilesForAllChannels": true,
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app.kkh.edc-connect",
      "type": "distribution",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        "portable",
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      "github"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "rebuild": "electron-rebuild",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "release:mac": "electron-builder --mac -p always",
    "release:win32": "electron-builder --win -p always",
    "release:linux": "electron-builder --linux -p always"
  },
  "dependencies": {
    "@dogrocker/thaismartcardreader": "^0.2.3",
    "@primer/octicons": "^9.6.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "electron-store": "^5.2.0",
    "escpos": "^2.5.2",
    "fs-jetpack": "^2.4.0",
    "generate-password": "^1.5.1",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "npm": "^6.14.10",
    "nprogress": "^0.2.0",
    "password-generator": "^2.3.2",
    "xml-js": "^1.6.11",
    "xmltojson": "^1.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "babel-loader": "^8.2.2",
    "chai": "^4.1.0",
    "css-loader": "^3.6.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-mocha": "^8.2.2",
    "electron-rebuild": "^2.3.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^6.2.3",
    "source-map-support": "^0.5.19",
    "spectron": "^6.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
